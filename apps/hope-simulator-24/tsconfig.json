{
    "compilerOptions": {
        "target": "ES2017",
        "lib": [
            "ES2017",
            "DOM"
        ],
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
